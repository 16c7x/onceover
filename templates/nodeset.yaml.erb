HOSTS:
<% hosts_hash.each do |name, info| -%>
<% if info[:comment_out] then prefix = '#' end-%>
  <%= prefix %><%= name %>:
  <%= prefix %>  roles:
  <%= prefix %>    - agent
  <%= prefix %>  type: aio
  <%= prefix %>  platform: <%= info[:platform] %>
  <%= prefix %>  box: <%= info[:boxname] %>
  <%= prefix %>  box_url: <%= info[:url] %>
  <%= prefix %>  hypervisor: vagrant_virtualbox
<% end -%>
